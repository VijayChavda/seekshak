<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="db-wrapperPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>seekshak.dbwrapper.entities.Jobsdetails</class>
    <class>seekshak.dbwrapper.entities.Jobs</class>
    <class>seekshak.dbwrapper.entities.Admin</class>
    <class>seekshak.dbwrapper.entities.JobRequirement</class>
    <class>seekshak.dbwrapper.entities.Research</class>
    <class>seekshak.dbwrapper.entities.Institute</class>
    <class>seekshak.dbwrapper.entities.Experience</class>
    <class>seekshak.dbwrapper.entities.Userinfo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/seekshak?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="sql"/>
    </properties>
  </persistence-unit>
</persistence>
